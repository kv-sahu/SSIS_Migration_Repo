							"source": {
								"type": "SqlServerSource",
								"sqlReaderQuery": "select\ts.name as [SchemaName],\r\n\t\tt.name as [TableName]\r\nfrom sys.tables t\r\ninner join sys.schemas s on t.schema_id = s.schema_id\r\nwhere s.name = 'SalesLT'",
